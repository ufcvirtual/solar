= render partial: "authors", locals: {f: f}
= f.input :title, as: :string
= f.input :subtitle, as: :string
= f.input :article_periodicity_title, as: :string
.inline
  = f.input :address, required: true, input_html: {size: 20}
  = f.input :fascicle, as: :string, input_html: {size: 5}
.inline
  = f.input :volume, as: :string, required: true, input_html: {size: 5}
  = f.input :pages, as: :string, required: true, input_html: {size: 5}, placeholder: "5, 12-20"
.inline
  = f.input :publication_month, as: :string, required: true, input_html: {size: 10}
  = f.input :publication_year, as: :string, required: true, input_html: {size: 5}

:javascript

  $("#bibliography_volume, #bibliography_fascicle, #bibliography_publication_year, #bibliography_edition").mask("9999");
