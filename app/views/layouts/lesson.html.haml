!!!
%html{lang: I18n.locale.to_s.gsub('_', '-')}
  %head
    %meta{charset: "utf-8"}
    %meta{"http-equiv" => "X-UA-Compatible", content: "IE=edge,chrome=1"}
    %meta{name: "viewport", content: "width=device-width, initial-scale=1 maximum-scale=1"}
    %title= content_for?(:title) ? yield(:title) : 'Solar'

    = javascript_include_tag 'jquery3', 'jquery-ui', 'jquery_ujs', 'jquery.cookie', 'jquery.dropdown', 'lessons', 'breadcrumb', 'helpers', "jquery.fancybox3.min"

    = stylesheet_link_tag 'jquery.dropdown.css', "jquery.fancybox3.min", "online_correction_files"
    = stylesheet_link_tag "themes/theme_" + "#{user_session[:theme]}", id: "themes"
    = stylesheet_link_tag 'misc/div_layout', 'fonts/fonts', media: 'all'

    = csrf_meta_tags

    = yield(:head)

  %body
    .block_wrapper_lesson
      .flash_message_wrapper
        - flash.each do |name, msg|
          #flash_message{ class: name }
            = content_tag(:span, msg, id: "flash_message_span")
            
    = yield
