     var ws_sh = ws_sh || null;
    //Websocket botão support_help
    function websocket_support_help(user, session, button, btn_exit){
      console.log("Cliente suporte: Função principal! - ws_sh: " + ws_sh + ", Botão: " + button + ", Sessão: " + session + ", Sair: " + btn_exit );
      // Desconectando
      if (!session) {
        console.log("Cliente suporte: Está conectado? " + ws_sh);
        if (ws_sh) {
          console.log("Cliente suporte: A sessão é false - Desconectando");
          //Muda o botão se não tem sessão
          $('#mysolar_support_web .btn:first i').removeClass( "off" );
          $('#mysolar_support_web .btn:first i').addClass( "on" );
          $('.qtip-content').html("#{I18n.t('support_web_tooltip_on')}");
          //Desconectando se botão
          if (button){
            console.log("Cliente suporte: Botão acionado - Desconectando...");
            if (!btn_exit){
              if (confirm("#{I18n.t('webconferences.preview.disconnect_webcsocket')}")){
                console.log("Desconectado...!");
                ws_sh.close();
                console.log("Cliente suporte: Desconectado!");
              }
              else { change_session_sh(user); console.log("Cliente suporte: Cancelando desconexão... Muda a sessão e reconecta..."); }
            //Desconecta ao sair do solar
            } else {
              console.log("Cliente suporte: Desconectando com o botão sair!!!");
              ws_sh.close();
              console.log("Cliente suporte: Desconectado com o botão sair!!!");
            }
          }
        }
      }
      //Conectando
      else {
        console.log("Cliente suporte: A sessão é true - Conectando");
        //Muda o botão se tem sessão
        $('#mysolar_support_web .btn:first i').removeClass( "on" );
        $('#mysolar_support_web .btn:first i').addClass( "off" );
        $('.qtip-content').html("#{I18n.t('support_web_tooltip_off')}");
        //Conectando se botão
        console.log("Cliente suporte: Conectando usuário ao websocket...");
        var websocket_host_sp = "#{YAML::load(File.open("config/global.yml"))[Rails.env.to_s]["websocket"]["host_support_help"]}";
        var websocket_port_sp = "#{YAML::load(File.open("config/global.yml"))[Rails.env.to_s]["websocket"]["port_support_help"]}";
        //Conexão com o WebSocket
        ws_sh = new WebSocket('ws://'+websocket_host_sp+':'+websocket_port_sp+'/'+user);
        ws_sh.onmessage = function (msg) {
          var data = JSON.parse(msg.data);
          console.log("Cliente suporte: Mensagem recebida do server: " + data.academic_allocation_id);
          add_support_help_warning(data.requests, data.academic_allocation_id);
        };
        ws_sh.onopen = function () {  }; //ao iniciar ws
        ws_sh.onclose = function () {  }; // ao perder conexão com o ws
        ws_sh.onerror = function (err) { }; // ao receber erro no ws
      }
    }

