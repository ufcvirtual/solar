        url: "/webconferences/support_help_session",
        success: function(data){
          console.log("Cliente suporte: Resposta get ajax: " + data.session + user);
          console.log("Cliente suporte: Sessão alterada com sucesso... Chamando a funcão principal");
          websocket_support_help(user, data.session, true, btn_exit);
        },
