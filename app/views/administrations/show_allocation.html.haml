%td= ( @allocation.allocation_tag.nil? ? '' : type(@allocation.allocation_tag) )
%td= @allocation.allocation_tag.try(:info)
%td= name_allocation_status(@allocation.status)
%td= @allocation.updated_by.try(:username)
%td= l(@allocation.updated_at)
%td.right_buttons
  = link_to_function content_tag(:i, nil, class: 'icon-edit'), 'manage(this)', :"show-link" => admin_allocation_path(@allocation), :"edit-link" => edit_admin_allocation_path(@allocation), class:  'btn btn_manage_allocation'

:javascript
  eval("#{show_flash}")
