%h1#lightBoxDialogTitle= t("webconferences.get_record.recordings", name: @assignment_webconference.title)
.chat_messages
  .title-warning
    = raw t('webconferences.get_record.warning')
  - unless @recordings.empty?
    %table.tb_list
      %thead
        %tr.lines
          %th= t('webconferences.get_record.access')
          %th= t("webconferences.get_record.start")
          %th= t("webconferences.get_record.end")
          - if @can_remove_record
            %th
      %tbody
        - @recordings.each_with_index do |record, idx|
          %tr.lines
            %td= link_to t('webconferences.get_record.record', number: idx+1), Bbb.get_recording_url(record), target: '_blank'
            %td= l(record[:startTime].to_datetime)
            %td= l(record[:endTime].to_datetime)
            - if @can_remove_record
              %td= button_tag (content_tag(:i, nil, class: 'icon-trash')), class: 'btn btn_caution remove_record', :'data-tooltip' => t('webconferences.get_record.remove'), :'data-url' => remove_record_assignment_webconference_path(id: @assignment_webconference.id, recordID: record[:recordID])

  - else
    .block_content_text_list.text_none= t("webconferences.get_record.no_message")

= javascript_include_tag "tooltip"

:javascript
  $(function(){
    $('.remove_record').click(function(){
      if (!confirm("#{I18n.t(:message_confirm)}"))
        return false;

      tr = $(this).parents('tr');
      $.delete($(this).data('url'), function(data){
        tr.remove();
        flash_message(data.notice, "notice", 'fancybox-outer');
      }).error(function(data){
        var data = $.parseJSON(data.responseText);
        if (typeof(data.alert) != "undefined")
          flash_message(data.alert, 'alert', 'fancybox-outer');
      });
    });
  });