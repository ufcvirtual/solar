.block_content
  %table.questions
    %thead
      - @exam_questions.each do |question|
        %tr.question
          %td.number
            - @question_order = question.order.to_s
            = @question_order + ") "
          %td.enunciation
            = question.enunciation
          %tbody
            - question_items = items(question.id)
            - question_items.each do |item| 
              %tr.question_items
                %td.checkbox
                  - if question.type_question.to_i == Question::UNIQUE
                    = radio_button_tag 'question_items', item.id, checked = false, { class: 'selected_items'}
                  - elsif (question.type_question.to_i == Question::MULTIPLE)
                    = check_box_tag 'question_items', item.id, checked = false, { class: 'selected_items'}
                  - else
                    = check_box_tag 'question_items', item.id, checked = false, { class: 'selected_items'}
                %td.item
                  = item.description

.message_div_navigation
  = will_paginate @exam_questions


