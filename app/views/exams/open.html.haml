- unless @exam.nil?
	.exam_head
		.exam_head_left
			%div= @exam.name
		.exam_head_right
			%div= @exam.duration
			%div= @exam.number_questions

	- unless @exam_questions.nil?
		.detail

:javascript

	$('.detail').html('#{escape_javascript( render :partial => 'exams/show_questions' )}');

	$(function() {		
		$(".detail").on("click", ".pagination a", function(){

			var url = this.href;
			$('.detail').load(url);
		
			return false;
		});
	});