= simple_form_for @user_blacklist, url: blacklist_index_path, html: {id: "user_blacklist_form"} do |f|
  %span.form_requirement= t(:required_fields)
  %h1#lightBoxDialogTitle= t('user_blacklist.new.new')

  .form-inputs.block_content.user_blacklist
    = f.input :cpf
    = f.input :name

  .form-actions.right_buttons
    = button_tag t(:cancel), :type => 'button', :onclick => "jQuery.fancybox.close()", class: 'btn btn_default btn_lightbox', alt: t(:cancel)
    = button_tag t(:save), :type => 'button', :onclick => "user_blacklist_save()", class: 'btn btn_main btn_lightbox', alt: t(:save)