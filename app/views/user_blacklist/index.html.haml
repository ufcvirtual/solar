.block_wrapper.list_user_blacklist{"data-link-list" => blacklist_index_path(layout: false)}
  .block_title
    %h2= t('.title')
  .block_content_toolbar
    .block_toolbar_left
      = link_to content_tag(:i, nil, class: 'icon-plus'), new_blacklist_path, class: "btn btn_main link_new_user_blacklist", :"data-tooltip" => t(".new")
    .block_toolbar_left
      = text_field_tag 'text_search', '', placeholder: t('.cpf_or_name')
      = button_tag t(:search), type: :button, class: "btn btn_default", id: "search_user_in_blacklist", :"data-link" => search_blacklist_index_path
  .block_content.blacklist

    = render 'blacklist'

:javascript

  $(".link_new_user_blacklist").call_fancybox();

  $(function(){

    $("#search_user_in_blacklist").click(function(){
      var data = { "search": $("#text_search").val() };

      $.get($(this).data("link"), data, function(data){
        $(".block_content.blacklist").html(data);
        $(".tb_list").tablesorter();
        $("th").last().addClass("sorter-false");
      });
    });

  });
