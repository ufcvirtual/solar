.ip_control
  .title-warning
    %div.whats_ip_title
      = link_to_function raw(t('.whats_ip_title')), 'hide_or_show_info(this)', onkeydown: 'click_on_keypress(event, this);'
      = link_to_function content_tag(:i, nil, class: 'icon-arrow-down-triangle', :"data-tooltip" => t('editions.tools.expand')), 'hide_or_show_info(this)'
      = link_to_function content_tag(:i, nil, class: 'invisible icon-arrow-up-triangle', :"data-tooltip" => t('editions.tools.expand')), 'hide_or_show_info(this)'
    %div.whats_ip.invisible= raw t('.whats_ip')

