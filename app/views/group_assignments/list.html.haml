- if @groups.any?
  - @groups.each do |group|
    %tr.lines
      %td= group.group_name
      %td= group.group_participants.count
      %td.icon{ :"data-tooltip" => t(".participants"), :"aria-label" => t(".participants"), onclick: "select_group(this)", onkeydown: "select_group(this, event)", :"data-url" => import_participants_group_assignment_path(group.id), :"data-name" => group.group_name }= content_tag(:i, nil, class: "icon-users", tabindex: 0)
- else
  %td.text_none{ colspan: 2 }= t(".no_groups")

= javascript_include_tag "tooltip"
