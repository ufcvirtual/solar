%div
  .block_wrapper#subject_info_portlet
    .block_title
      .block_left
        %h2= t(:curriculum_access_curriculum_unit)
      .block_right
        %h2= t(:curriculum_unit_responsible)
    .block_content
      .block_left
        = @curriculum_unit.try(:resume)
      .block_right
        - if @responsible
          - can_send_message = (can? :index, Message, on: [@allocation_tag_id])
          - @responsible.each do |resp|
            - name, profile = resp.info(:name, @researcher), resp.profile_name
            .participant{title: name + " (" + profile + ") "}
              = truncate( [name, " (", profile, " )"].join, length: 55, omission: '...' )
              - if can_send_message
                %span= link_to (content_tag(:i, nil, class: 'icon-mail participants_messages')), new_message_path(user_id: resp.id, bread: 'menu_messages'), class: 'can-update-menu', 'data-menu-bread' => 'menu_messages'

  = render "lesson_portlet"

  .block_wrapper.block_wrapper_small
    = render "message_portlet"
    = render "discussion_posts_portlet"
    = render "agenda_portlet"

= javascript_include_tag "contextual_help/subject"