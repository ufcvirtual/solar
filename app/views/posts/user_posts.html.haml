.user_posts
  %h1#lightBoxDialogTitle= t(".title", user: @user.name, discussion: @discussion.name)
  - unless @posts.empty?
    %table.tb_list
      %thead
        %tr.lines
          %th= t(".message")
          %th.center= t(".date")
          %th.center= t(".time")
      %tbody
        - @posts.each do |post|
          %tr.lines
            %td.profile= sanitize post.content
            %td.center= l(post.updated_at.to_datetime, format: :normal)
            %td.center= l(post.updated_at.to_datetime, format: :clock_time)

  
    - if @academic_allocation.evaluative || @academic_allocation.frequency
      = simple_form_for :academic_allocation_user, url: evaluate_discussion_posts_path(@discussion), html: { method: :put, id: 'academic_allocation_user_grade_form' } do |f|
      
        = f.input :user_id, as: :hidden, input_html: { value: @user.id }
        .form-inputs.block_content
          .inline
            - if @academic_allocation.evaluative
              = f.input :grade, required: true, as: :float, step: 0.01, label: t(".grade"), input_html: { value: @alluser.try(:grade), min:0, max:10 } 
            -  if @academic_allocation.frequency  
              = f.input :working_hours, required: true, as: :float, label: t(".frequency"), input_html: { value: @alluser.try(:working_hours), min:0, max: @academic_allocation.max_working_hours }
              = t(:info_frequency, scope: [:posts, :user_posts], wh: @academic_allocation.max_working_hours.to_s) 
            = link_to_function t(:save), 'finish_evaluation(this)', class: 'btn btn_main'

  - else
    .block_content_text_list.text_none= t(".no_posts")

:javascript
  function finish_evaluation(btn){
    var form = $(btn).parents('form:first');
    $.put(form.attr('action'), form.serialize(), function(data){
      jQuery.fancybox.close();
      flash_message(data.notice, 'notice');
    }).error(function(data){
      var data = $.parseJSON(data.responseText);
      if (typeof(data.alert) != "undefined")
        flash_message(data.alert, 'alert', 'fancybox-outer');
    });
  }


  $(function(){
   $('#save_grade').click(function(){
      $('#academic_allocation_user_grade_form:last').serialize_and_submit();
    });
  });      
