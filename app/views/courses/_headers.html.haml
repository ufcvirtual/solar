.autocomplete_header
  = f.check_box :use_autocomplete_header
  = t('courses.form.use_autocomplete_header')

%fieldset.colored
  %legend= t('courses.form.about_autocomplete')
  %p= t('courses.form.info_autocomplete')
  %ol{type: '1'}
    %li= t('courses.form.course_name')
    %li= t('courses.form.curriculum_unit_name')
    %li= t('courses.form.test_name')
    %li= t('courses.form.date')
    %li= t('courses.form.place')
    %li= t('courses.form.student_name')
    %li= t('courses.form.enrollment')

.desc
  = f.input :header_exam, as: :ckeditor

.right_buttons
  = button_tag t(:back), :type => 'button', :onclick => "back_to_info(event)", class: 'btn btn_default btn_lightbox', onkeypress: 'back_to_info(event)', alt: t(:back)
  = button_tag t(:save), class: 'btn btn_main btn_lightbox save', alt: t(:save), type: 'button'

= javascript_include_tag 'ckeditor/init', 'courses'

:javascript
  $(function(){
    CKEDITOR_BASEPATH = "#{request.env['RAILS_RELATIVE_URL_ROOT']}/assets/ckeditor/";

    CKEDITOR.editorConfig = function (config) {
      /* Filebrowser routes */
      // The location of an external file browser, that should be launched when "Browse Server" button is pressed.
      config.filebrowserBrowseUrl = "/ckeditor/attachment_files";

      // The location of an external file browser, that should be launched when "Browse Server" button is pressed in the Flash dialog.
      config.filebrowserFlashBrowseUrl = "/ckeditor/attachment_files";

      // The location of a script that handles file uploads in the Flash dialog.
      config.filebrowserFlashUploadUrl = "/ckeditor/attachment_files";

      // The location of an external file browser, that should be launched when "Browse Server" button is pressed in the Link tab of Image dialog.
      config.filebrowserImageBrowseLinkUrl = "/ckeditor/pictures";

      // The location of an external file browser, that should be launched when "Browse Server" button is pressed in the Image dialog.
      config.filebrowserImageBrowseUrl = "/ckeditor/pictures";

      // The location of a script that handles file uploads in the Image dialog.
      config.filebrowserImageUploadUrl = "/ckeditor/pictures?";

      // The location of a script that handles file uploads.
      config.filebrowserUploadUrl = "/ckeditor/attachment_files";

      config.allowedContent = true;
      config.extraPlugins = 'tableresize,uploadimage,uploadfile';

      config.toolbar = [
        { name: 'document', groups: [ 'mode', 'document', 'doctools' ], items: [ 'Source', 'Print' ] },
        { name: 'clipboard', groups: [ 'clipboard', 'undo' ], items : [ 'Cut', 'Copy', 'Paste', 'PasteText', 'PasteFromWord', '-', 'Undo', 'Redo' ] },
  			{ name: 'styles', items: [ 'Format', 'Font', 'FontSize' ] },
  			{ name: 'basicstyles', groups: [ 'basicstyles', 'cleanup' ], items: [ 'Bold', 'Italic', 'Underline', 'Strike', '-', 'RemoveFormat', 'CopyFormatting' ] },
  			{ name: 'colors', items: [ 'TextColor', 'BGColor' ] },
  			{ name: 'align', items: [ 'JustifyLeft', 'JustifyCenter', 'JustifyRight', 'JustifyBlock' ] },
  			{ name: 'links', items: [ 'Link', 'Unlink' ] },
  			{ name: 'paragraph', groups: [ 'list', 'indent', 'blocks', 'align', 'bidi' ], items: [ 'NumberedList', 'BulletedList', '-', 'Outdent', 'Indent', '-', 'Blockquote', 'CreateDiv' ] },
  			{ name: 'insert', items: [ 'EqnEditor', 'Image', 'Table', 'SpecialChar', 'HorizontalRule' ] },
  			{ name: 'tools', items: [ 'Maximize' ] },
  			{ name: 'editing', items: [ 'Scayt' ] }
      ];
    };

  });
