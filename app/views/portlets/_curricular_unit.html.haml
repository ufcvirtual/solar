.block_large#mysolar_curriculum_unit_portlet
  .block_title
    %h2
      %i.icon-docs
      = t(:my_solar_curriculum_units)
    - unless @offers.empty?
      %span.slider-block{style: 'float: right; margin-top: 4px'}
        %a{ href: '#', :"data-tooltip" => t(".filter_data"), :'aria-label' => t(".filter_data")}
          %i.icon-search{:"data-tooltip" => t(".filter_data"), :'aria-label' => t(".filter_data")}

  .mysolar_portlets_content

    .block_wrapper#mysolar_curriculum_unit_wrapper
      .block_content
        %table.tb_list.user-courses
          %thead
            %tr.lines
              %th#tb_type.no_sort{style: "width: 9.5%"}= t(".type")
              %th#tb_none{style: "display: none"}
              %th#tb_curricular_unit{style: "width: 40%"}= t(".curricular_unit")
              %th#tb_course{style: "width: 33%"}= t(".course")
              %th#tb_semester{style: "width: 15%"}= t(".semester")
              %th#tb_link.no_sort{style: "width: 9.5%"}= t(".link")
              %th#tb_bla{style: "display: none"}
          %tbody.offers
            - unless @offers.empty?
              - @offers.each do |offer|
                - c_un =[offer.uc_code, offer.uc_name].join(' - ')
                - c_un = c_un.nil? ? [offer.c_code, offer.c_name].join(' - ') : c_un
                - link = add_tab_path(id: offer.offer_id, context: Context_Curriculum_Unit, allocation_tag_id: offer.at_id)
                - livre = offer.uc_type_id.to_i == 3

                %tr.lines.offer{'data-tab-id' => offer.id, 'data-tab-link' => link, 'tabindex' => 0}

                  %td.type{'data-tooltip' => offer.uc_type, headers: 'tb_type' }
                    - unless offer.uc_type.blank?
                      = image_tag(offer.uc_type_icon, alt: "#{offer.uc_type}")
                  %td{style: "display: none", headers: 'tb_none' }= offer.uc_type

                  - if livre
                    %td.uc-name{style: "text-align: center", headers: 'tb_curricular_unit' }= ' - '
                  - else
                    %td.uc-name{headers: 'tb_curricular_unit' }= [offer.uc_code, offer.uc_name].join(' - ') rescue ' - '

                  %td.course{headers: 'tb_course' }= [offer.c_code, offer.c_name].join(' - ') rescue ' - '
                  %td.semester{headers: 'tb_semester' }= offer.s_name
                  %td.link{headers: 'tb_link' }= link_to_function content_tag(:i, nil, class: 'icon-arrow-right'), link, class: 'nodecoration',:'data-tooltip'=> c_un, :'aria-label'=> t(".link_tool", un_cur: c_un), onkeydown: 'click_on_keypress(event, this);'
                  %td.profiles{style: "display: none", headers: 'tb_bla' }= offer.profiles

              .block_content_text_list.text_none.empty_message.hide_message
                = t(:my_solar_curriculum_without)

            - else
              %tr.lines
                %td.block_content_text_list.text_none{colspan: 5, align: "center"}= t(:my_solar_curriculum_without)

          .slide.slide-block
            = label_tag :search_offer, t(".search"), class: "title"
            = text_field_tag :search_offer, nil, :"data-column" => "all", type: :search, class: "search"
            = label_tag :filter, t(".filter"), class: "title"
            = label_tag :type, t(".type"), class: "subtitle"
            = select_tag :type, options_for_select(@types.map{ |c| [c.description, c.description] }), prompt: t(".all"), class: "tablesorter-filter search", :"data-column"=>"1"
            = label_tag :profile, t(".profile"), class: "subtitle"
            - profiles = @user.profiles.where('allocations.allocation_tag_id IS NOT NULL')
            = select_tag :profile, options_from_collection_for_select(profiles, "id_to_unique_search", "name"), prompt: t(".all"), class: "tablesorter-filter search", :"data-column"=>"6"

= javascript_include_tag "tooltip"

:javascript

  $(function(){

    $('table.user-courses tbody.offers').on('click keypress', '.offer', function(event){

      var keynum = event.which || event.keyCode;

      if( keynum == 13 || event.type == 'click') {

        var count_tabs_open = $('#mysolar_tabs_wrapper li').length;
        var max_tabs_open = "#{Max_Tabs_Open.to_i}";

        // limite de abas abertas atingido
        if ((count_tabs_open >= max_tabs_open) && ($('#mysolar_tabs_wrapper li[data-tab-id=' + $(this).data('tab-id') + ']').length < 1))
          flash_message("#{t(:curriculum_access_alert)}", 'warning');
        else
          window.location = $(this).data('tab-link');
      }
    });

    // refazer codigo do edx

    $.get("#{my_edx_courses_path}", function(data){
      $("#mysolar_curriculum_unit_wrapper").append(data);
    });

  });
