- groups = assignment.groups_assignments(@allocation_tag_id)
.block_title
  %h2{align: "center"}= t(".title")
- unless groups.empty?
  %table.tb_list
    %thead
      %tr.lines
        %th{id: "group"}= t(".group")
        %th.center{style: "width: 10%", id: "sent_on"}= t("assignments.list.sent_on")
        %th.center{style: "width:20%", id: "situation"}= t("assignments.list.situation")
        %th.center{style: "width:10%", id: "grade"}= t("assignments.list.grade")
        %th.center{style: 'width:10%', id: "working_hours" }= t(:workload, scope: [:scores, :info])
        %th.center{style: "width:20%", id: "comments"}= t("assignments.list.comments")
    %tbody
      - groups.each_with_index do |group|
        - info = assignment.info(nil, @allocation_tag_id, group.id)
        %tr
          %td{headers: "group" }= link_to group.group_name, student_assignment_path(assignment.id, group_id: group.id), class: :link_content
          %td.center{headers: "sent_on" }= info[:file_sent_date]
          %td.center{class: "assignment_#{info[:situation]}", headers: "situation"}= t(info[:situation].to_sym)
          %td.center{headers: "grade" }= info[:grade] || "-"
          %td.center{headers: "working_hours" }= info[:working_hours] || "-"
          %td.center{headers: "comments" }= content_tag :i, nil, class: "icon-comment big #{info[:has_comments] ? '' : 'empty'}"
- else
  .text_none=t :itens_not_found
