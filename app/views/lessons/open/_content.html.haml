.content{ :"data-url" => open_lesson_path(@lesson) }
  - path = @lesson.path.sub('&feature=youtu.be', '')
  - path = path.sub('https://youtu.be', 'http://www.youtube.com/embed')
  %iframe#content_lesson{ title: @lesson.name, src: path, width: '100%', height: '100%', name: 'content_lesson', target: '_self', frameborder: 0, framespacing: 0 }
