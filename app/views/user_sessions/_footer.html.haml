- locales = ['pt_BR', 'en_US']
- selected = "#{I18n.locale}"

#team.panel
  .content
    - @sectors = YAML::load(File.open('public/members.yml'))
    = render template: '/pages/team'
  = image_tag('arrow.png', class: 'arrow')

#faq.panel
  .content
    = render template: '/pages/faq'
  = image_tag('arrow.png', class: 'arrow')

#tutorials.panel
  .content
    = render template: '/pages/tutorials'
  = image_tag('arrow.png', class: 'arrow')

%footer
  .menu_footer
    %ul
      %li= link_to t(:login_footer1), 'http://www.virtual.ufc.br', target: '_blank'
      %li= link_to t(:login_footer2), 'http://www.ufc.br', target: '_blank'
      %li= link_to t(:login_footer3), '#team', class: 'panel-link'
      %li= link_to t(:license_terms), 'http://github.com/wwagner33/solar/blob/master/GPLv3', target: '_blank'
      %li= link_to t(:login_footer4), privacy_path
      %li.app
        = link_to t(:login_app), apps_path
        .new
          = t(:login_new)
          = content_tag :i, nil, class: "icon-star"     

      %li.choice-tutorial
        = link_to t(:help), '#', class: 'link-arrow'
        %ul.choice-tutorial-menu
          %li= link_to t(:login_faq), '#faq', class: 'panel-link'
          %li= link_to t(:videos), 'video_tutorials.html', target: '_blank'
          %li= link_to t('tutorials.menu'), '#tutorials', class: 'panel-link'
      %li.choice-language
        = link_to t(:login_language), '#', class: "link-arrow"
        %ul.choice-language-menu
          %li.language.pt_BR
            = link_to 'PortuguÃªs (BR)', url_for(locale: locales.first), class: ((selected == locales.first) ? 'selected' : '')
          %li.language.en_US
            = link_to 'English (USA)', url_for(locale: locales.last), class: ((selected == locales.last) ? 'selected' : '')

:javascript
  var div = '<footer><div class="menu_footer">'+ $('.menu_footer').html() +'</div></footer>';
  $('.panel').append(div);

:css
  .menu_footer .new, .menu_footer .new i{
    display: inline-block;
    color: #FFC50D;
    font-size: 9pt;
  }

  .menu_footer li.app{
    min-width: 93px;
    display: inline-block;
  }

  .menu_footer .new i{
    margin-left: -5px;
  }