- unless files.nil? || files.empty?
  - files.each do |file|
    - size =format('%.2f KB', file.attachment_file_size/1000.0)
    %tr.lines
      %td{ :"data-tooltip" => file.attachment_file_name, headers: "name_file" }= link_to file.attachment_file_name.truncate(60), download_schedule_event_files_path(id: file.id), {class: "link_content", :'aria-label'=> t('posts.post.download', file: file.attachment_file_name, size: size)}
      %td.right{headers: "size_file" }= size
      %td.center{headers: "sent_on_file" }= l(file.updated_at, format: :at_date)
      %td.center{headers: "sent_by_file" }= file.user.name
      %td.center{headers: "correction_file"}= link_to content_tag(:i, nil, class: "icon-edit", :'aria-hidden' => true), online_correction_schedule_event_file_path(file.id), :"data-tooltip" => t(".correction_file"), :'aria-label' => t(".correction_file"), target: "_blank", class: 'btn'
      - if (can?(:create, ScheduleEventFile, on: [@allocation_tag_id]) && @allocation_tag_id.class != Array)
        %td.center{headers: "delete_file"}= link_to content_tag(:i, nil, class: "icon-trash", :'aria-hidden' => true), '#void', :"data-link-delete" => schedule_event_file_path(file.id), :"data-tooltip" => t(".delete"), :'aria-label' => t(".delete"), onclick: "delete_file(this);", onkeypress: 'click_on_keypress(event, this);', class: 'btn'

= javascript_include_tag 'tooltip'
