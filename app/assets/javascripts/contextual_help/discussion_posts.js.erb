function solar_help() {
  var solar_contextual_help = introJs();

  solar_contextual_help.setOptions({
    showStepNumbers: false,
    nextLabel: "<%= I18n.t(:tutorial_next) %>",
    prevLabel: "<%= I18n.t(:tutorial_previous) %>",
    skipLabel: "<%= I18n.t(:tutorial_skip) %>",
    doneLabel: "<%= I18n.t(:tutorial_done) %>",
    steps: [
      {
        element: '#forum_description',
        intro: "<%= 'Neste bloco é exibida a descrição do fórum'.force_encoding('UTF-8') %>"
      },
      {
        element: '#forum_pagination',
        intro: "<%= 'Barra de comandos do fórum, onde você pode...'.force_encoding('UTF-8') %>"
      },
      {
        element: '#button_new_post',
        position: 'right',
        intro: "<%= '... criar uma nova postagem ...'.force_encoding('UTF-8') %>"
      },
      {
        element: '#forum_view_mode',
        position: 'left',
        intro: "<%= '... e alternar a visualização entre modo lista ou árvore.'.force_encoding('UTF-8') %>"
      }
    ]
  });

  // steps adicionais caso o fórum tenha conteúdo
  if ( $.trim( $('.forum_post_buttons').html() ) ) {
    var discussion_steps = solar_contextual_help._options.steps;
    discussion_steps.push(
      {
        element: '.forum_posts_wrapper',
        intro: "<%= 'Nesta região são exibidas as postagens existentes.'.force_encoding('UTF-8') %>"
      },
      {
        element: '.forum_post_buttons .btn-group',
        position: 'left',
        intro: "<%= 'E no canto inferior direito das postagens localizam-se os comandos relacionados à postagem, onde você pode respondê-la ou adicionar anexos, apagá-la e editá-la (caso seja o autor).'.force_encoding('UTF-8') %>"
      }
    );
    solar_contextual_help.setOptions({
      steps: discussion_steps
    })
  }

  solar_contextual_help.start();
}