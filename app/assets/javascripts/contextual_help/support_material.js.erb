function solar_help() {
  var solar_contextual_help = introJs();

  solar_contextual_help.setOptions({
    showStepNumbers: false,
    nextLabel: "<%= I18n.t(:tutorial_next) %>",
    prevLabel: "<%= I18n.t(:tutorial_previous) %>",
    skipLabel: "<%= I18n.t(:tutorial_skip) %>",
    doneLabel: "<%= I18n.t(:tutorial_done) %>",
    steps: [
      {
        intro: "<%= 'Nesta página são listados os arquivos e links de material complementar desta disciplina.'.force_encoding('UTF-8') %>"
      },
      {
        element: '.support_material_folder',
        intro: "<%= 'Os itens estão divididos por categorias.'.force_encoding('UTF-8') %>"
      },
      {
        element: 'table td a+a',
        intro: "<%= 'Você pode acessar os itens diretamente...'.force_encoding('UTF-8') %>"
      },
      {
        element: '.block_actions button',
        position: 'left',
        intro: "<%= '... ou realizar o download de toda a categoria ...'.force_encoding('UTF-8') %>"
      },
      {
        element: '#download_all',
        intro: "<%= '... ou realizar o download de <b>TODOS</b> os arquivos.'.force_encoding('UTF-8') %>"
      }
    ]
  })
  .start();
}
