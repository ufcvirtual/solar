  var solar_contextual_help = introJs();

  solar_contextual_help.setOptions({
    showStepNumbers: false,
    nextLabel: "<%= I18n.t(:tutorial_next) %>",
    prevLabel: "<%= I18n.t(:tutorial_previous) %>",
    skipLabel: "<%= I18n.t(:tutorial_skip) %>",
    doneLabel: "<%= I18n.t(:tutorial_done) %>",
    steps: [
      {
        element: '#discussion_list',
        intro: 'Neste bloco são listados fóruns cadastrados nesta disciplina.'
      },
      {
        intro: 'Os fóruns só estarão disponíveis para postagem a partir da data inicial e após a data final eles ficarão bloqueados, sendo possível apenas a visualização.'
      }
    ]
  })
  .start();
}
