function solar_help() {
  var solar_contextual_help = introJs();

  solar_contextual_help.setOptions({
    showStepNumbers: false,
    nextLabel: "<%= I18n.t(:tutorial_next) %>",
    prevLabel: "<%= I18n.t(:tutorial_previous) %>",
    skipLabel: "<%= I18n.t(:tutorial_skip) %>",
    doneLabel: "<%= I18n.t(:tutorial_done) %>",
    steps: [
      {
        element: '.list_lessons',
        intro: "<%= 'Neste bloco são listados os módulos desta disciplina (caso existam) e as aulas disponíveis para visualização.'.force_encoding('UTF-8') %>"
      },
      {
        intro: "<%= 'Caso alguma aula possua uma data final de acesso então sua visualização será <b>bloqueada</b> após esta data.'.force_encoding('UTF-8') %>"
      }
    ]
  })
  .start();
}
